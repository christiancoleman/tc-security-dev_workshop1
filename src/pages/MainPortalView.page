				<a href="/ShoppingCart">View Shopping Cart</a>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<!-- show if logged in as a customer -->
				<a href="/OrderHistory">Order History</a>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<!-- only show if logged in as a customer -->
				<a href="/SearchCases">Open Cases</a>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<!-- only show if logged in as an employee -->
				<a href="/SearchEmployees?firstname=Hariet">Find an employee:</a>
			</div>
			<div class="col-lg-6">
				<input type="text" value=""/>
			</div>
